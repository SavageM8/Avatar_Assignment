@model IEnumerable<Avatar.Models.Fighters>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Fighter List<h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Fighter" asp-action="Create" class="btn btn-primary">Add a new fighter</a>
        </div>
    </div>
    <br />

@if (Model.Count() >0)
{
    <table>
        <thead>
            <tr>
                <th>
                    Bender Name
                </th>
                <th>
                    City
                </th>
                <th>
                    Weapon
                </th>
                <th>
                    Fighting Styles
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fighter in Model)
            {
                <tr>
                    <td width="35%">@fighter.BenderName</td>
                    <td width="35%">@fighter.City</td>
                    <td width="35%">@fighter.Weapon</td>
                    <td width="35%">@fighter.FightingStyles</td>
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p> No fighters have been created.</p>
}
</div>
